{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)"
    ],
    "deny": []
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "go run . --event"
          }
        ]
      }
    ],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "go run . --event"
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "go run . --event"
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "go run . --event"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "go run . --event"
					}
				]
			}
		]
  }
}
